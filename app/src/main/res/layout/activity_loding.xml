<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLoading01"
        android:layout_width="206dp"
        android:layout_height="195dp"
        app:layout_constraintBottom_toBottomOf="@id/ivLoading02"
        app:layout_constraintEnd_toEndOf="@id/ivLoading02"
        app:layout_constraintStart_toStartOf="@id/ivLoading02"
        app:layout_constraintTop_toTopOf="@id/ivLoading02"
        app:srcCompat="@drawable/flower_icon5" />

    <TextView
        android:id="@+id/tvLoadingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="해바라기"
        android:textSize="14pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLoading02" />

    <TextView
        android:id="@+id/tvLoadingContent"
        android:layout_width="252dp"
        android:layout_height="95dp"
        android:text="해바라기는 어쩌구 저쩌구 꽃말이 들어갑니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLoadingName"
        app:layout_constraintVertical_bias="0.307" />

    <ImageView
        android:id="@+id/ivLoading02"
        android:layout_width="370sp"
        android:layout_height="370sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:srcCompat="@drawable/flower_ring" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>